<style>
	* {
		margin: 0px;
		padding: 0px;
	}

	#header {
		margin: auto;
		width: 1000px;
		font-family: Arial, Helvetica, sans-serif;
	}

	ul,
	ol {
		list-style: none;

	}

	.nav>li {
		float: left;
	}

	.nav li a {
		background-color: rgb(0, 70, 144);
		color: rgb(255, 255, 255);
		text-decoration: none;
		padding: 10px 12px;
		display: block;
	}

	.nav li a:hover {
		background-color: #a8a8a8;
	}

	.nav li ul {
		display: none;
		position: absolute;
		min-width: 140px;
	}

	.nav li:hover>ul {
		display: block;
	}

	.nav li ul li {
		position: relative;
	}

	.nav li ul li ul {
		right: -140px;
		top: 0px;
	}

	.button {
		border: none;
		color: white;
		padding: 10px 12px;
		text-align: center;
		text-decoration: none;
		display: inline-block;
		font-size: 16px;
		margin: 4px 2px;
		cursor: pointer;
	}

	.button1 {
		background-color: rgb(0, 70, 144);
	}
</style>




